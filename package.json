{
  "name": "ray-restaurant-website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:full": "npm run build && npm run sitemap:generate",
    "preview": "vite preview",
    "sitemap:generate": "NODE_OPTIONS='--loader ts-node/esm' ts-node scripts/generate-sitemap.ts",
    "sitemap:validate": "ts-node scripts/validate-sitemap.ts",
    "domain:check": "ts-node scripts/domain-safety-check.ts",
    "domain:test": "playwright test tests/domain-canonicalization.spec.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug"
  },
  "dependencies": {
    "lucide-react": "^0.542.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.26.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "terser": "^5.43.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.3",
    "vite": "^5.4.2"
  }
}